#!/bin/bash

hora=${1:-6}
vef=${2:-1150}
btc=450

diario=$((6 * hora))
diario_btc=$((diario / btc))

semanal=$((5 * diario))
semanal_btc=$((semanal / btc))

mensual=$((4 * semanal))
mensual_btc=$((mensual / btc))

anual=$((12 * mensual))
anual_btc=$((anual / btc))


msg="Dado que el dolar valga %'d BsF;
Ganancias previstas con $%'d o %'d BsF la hora:

Diario (6 horas): $%'d | ฿%'d | %'d BsF
Semanal (5 dias): $%'d | ฿%'d | %'d BsF
Mensual (4 sems): $%'d | ฿%'d | %'d BsF
Anual (12 meses): $%'d | ฿%'d | %'d BsF
"

printf "$msg" $vef $hora $((hora * vef)) \
       $diario $diario_btc $((diario * vef)) \
       $semanal $semanal_btc $((semanal * vef)) \
       $mensual $mensual_btc $((mensual * vef)) \
       $anual $anual_btc $((anual * vef))
