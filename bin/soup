#!/usr/bin/env ruby

require 'colorize'
# String.colorize_disable(true) unless $stdout.tty?

@colors = String.colors - %i(black light_black default)
@words = ARGV.join(' ').upcase.delete(' ').chars

def colored_words
  @words.map { |x| x.colorize(@colors.sample) }.join(' ')
end

@words.length.times do
  puts @words.join(' ')
  @words.rotate!
end
