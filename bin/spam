#!/usr/bin/env ruby

require 'colorize'
String.colorize_disable(true) unless $stdout.tty?

@colors = String.colors - %i(black light_black default)
@words = ARGV.join(' ').upcase.chars

def colored_words
  @words.map { |x| x.colorize(@colors.sample) }
end

puts colored_words.join(' ')
puts colored_words[1..-1]
