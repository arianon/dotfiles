### bspwm hotkeys

super + {_, ctrl +, shift +} {h,j,k,l}
	bspc window --{focus,presel,swap} {left,down,up,right}

# resize windows
super + alt + {h,j,k,l}
	bspc window --edge {left -20,up +20,up -20,left +20}

super + {_,shift +} w
	bspc window --{close,kill}

super + t
	bspc desktop --layout next

# change window state
super + {S,s,f,x,X,m}
	bspc window --toggle {floating,pseudo_tiled,fullscreen,locked,sticky,private}

super + Tab
	bspc desktop --focus last

alt + {_,shift +} Tab
	bspc window --focus {next,prev}

# Switch desktops/send window to another desktop
super + {_,shift + }{1-9,0}
	bspc {desktop --focus,window --to-desktop} ^{1-9,10}

super + {plus,minus}
	bspc config --desktop focused window_gap \
		$((`bspc config --desktop focused window_gap` {+,-} 5 ))


### Mouse
~button1
	bspc pointer --grab focus

super + button{1-3}
	; bspc pointer --grab {move,resize_side,resize_corner}

super + @button{1-3}
	bspc pointer --ungrab

### Quit bspwm
super + {_, shift + } Escape
	{bspc query -T > "$BSPWM_TREE"; \
	bspc query -H > "$BSPWM_HISTORY"; \
	bspc query -S > "$BSPWM_STACK"; \
	bspc quit, bspc quit 1}


### Non-WM related keybinds.
super + Return
	termite -e fish

Print
	~/bin/imgur $(~/bin/img)

shift + @Print
	~/bin/imgur $(~/bin/img -s)

super + p
	~/bin/dmenu2

super + shift + p
	chromium

super + shift + e
	emacsclient -c -n

# make sxhkd reload its configuration files:
ctrl + alt + r
	pkill -USR1 -x sxhkd

