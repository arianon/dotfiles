# bspwm hotkeys

# Quit bspwm
alt + Escape
	pkill  panel; pkill -x sxhkd; bspc quit

# close window
alt + w
	bspc window -c

# change layout
alt + t
	bspc desktop -l next

# change window state
alt + {_, shift +}{s,f}
	bspc window -t {floating,pseudo_tiled,fullscreen}

# Switch windows/desktops
alt + {grave,Tab}
	bspc {window,desktop} -f last

# Switch desktops, doesn't work on spanish kb sadly
#alt + bracket{left,right}
#	bspc desktop -f {prev,next}

# Split window
alt + ctrl + {h,j,k,l}
	bspc window -p {left,down,up,right}

# Switch desktops/send window to another desktop
alt + {_,shift + }{1-9,0}
	bspc {desktop -f,window -d} ^{1-9,10}

alt + button{4-5}
	bspc config -d focused window_gap $((`bspc config window_gap` {+,-} 2 ))

# Default pointer functionality
~button1
	bspc pointer -g focus

alt + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

alt + !button{1-3}
	bspc pointer -t %i %i

alt + @button{1-3}
	bspc pointer -u

#
# wm independent hotkeys
#

Print
	shoot -u

shift + @Print
	shoot -su

alt + Return
	urxvt

alt + p
	dmenu_run

# make sxhkd reload its configuration files:
alt + r
	pkill -USR1 -x sxhkd

