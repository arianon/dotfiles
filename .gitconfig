[push]
	default = simple
[user]
	email = arianon@openmailbox.org
	name = Michael Valera
[alias]
	shallow-clone = clone --depth 1
[format]
	pretty = format: %C(auto)%h%d %s %C(bold black)(%cr)%C(reset) %C(bold blue)<%an>
[color]
	branch = auto
	ui = true
	status = auto
	diff = auto
	pager = true
	interactive = true
[color "status"]
	branch = bold ul yellow
	untracked = red
	added = green
	changed = yellow
[color "branch"]
	remote = green
[color "diff"]
	meta = yellow
	frag = magenta
	old = red bold
	new = green bold
