<?xml version="1.0" encoding="utf-8"?>
<openbox_menu xmlns="http://openbox.org/3.4/menu">
	<menu id="openbox-menu" label="Openbox">
		<item label="Configure">
			<action name="Execute">
				<execute>obconf</execute>
			</action>
		</item>
		<item label="Menu Configuration">
			<action name="Execute">
				<execute>obmenu</execute>
			</action>
		</item>
		<item label="Restart">
			<action name="Restart"/>
		</item>
		<item label="Reconfigure">
			<action name="Reconfigure"/>
		</item>
	</menu>
	<menu id="system-menu" label="System">
		<item label="Suspend">
			<action name="Execute">
				<execute>systemctl suspend</execute>
			</action>
		</item>
		<item label="Poweroff">
			<action name="Execute">
				<execute>systemctl poweroff</execute>
			</action>
		</item>
		<item label="Reboot">
			<action name="Execute">
				<execute>systemctl reboot</execute>
			</action>
		</item>
		<item label="Log out">
			<action name="Exit"/>
		</item>
	</menu>
	<menu id="root-menu" label="Root">
		<item label="Termite">
			<action name="Execute">
				<execute>termite -e fish</execute>
			</action>
		</item>
		<item label="Chromium">
			<action name="Execute">
				<execute>chromium</execute>
			</action>
		</item>
		<item label="Emacs">
			<action name="Execute">
				<execute>emacsclient -c --no-wait</execute>
			</action>
		</item>
		<item label="Thunar">
			<action name="Execute">
				<execute>thunar</execute>
			</action>
		</item>
		<separator/>
		<menu id="openbox-menu"/>
		<menu id="system-menu"/>
	</menu>
</openbox_menu>
