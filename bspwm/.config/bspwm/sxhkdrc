# bspwm hotkeys

# {Move,Switch} window
super + {_, ctrl +, shift +} {h,j,k,l}
	bspc window -{f,p,s} {left,down,up,right}

super + ctrl + {h,j,k,l}
	bspc window -p {left,down,up,right}


# close window
super + w
	bspc window -c

# change layout
super + t
	bspc desktop -l next

# change window state
super + {_, shift +}{s,f}
	bspc window -t {floating,pseudo_tiled,fullscreen}

# Switch desktops
super + Tab
	bspc desktop -f last

# Switch desktops/send window to another desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,window -d} ^{1-9,10}

super + button{4-5}
	bspc config -d focused window_gap $((`bspc config window_gap` {+,-} 2 ))

# Default pointer functionality
~button1
	bspc pointer -g focus

super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
	bspc pointer -t %i %i

super + @button{1-3}
	bspc pointer -u

# Quit bspwm
super + Escape
	pkill panel; pkill -x sxhkd; bspc quit

