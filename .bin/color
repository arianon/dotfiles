#!/usr/bin/bash

esc="["
reset="${esc}0m"

blackfg="${esc}30m";    blackbg="${esc}1;30m";
redfg="${esc}31m";      redbg="${esc}1;31m";
greenfg="${esc}32m";    greenbg="${esc}1;32m";
yellowfg="${esc}33m";   yellowbg="${esc}1;33m";
bluefg="${esc}34m";     bluebg="${esc}1;34m";
purplefg="${esc}35m"    purplebg="${esc}1;35m";
cyanfg="${esc}36m";     cyanbg="${esc}1;36m";
whitefg="${esc}37m";    whitebg="${esc}1;37m";

boldon="${esc}1m";      boldoff="${esc}22m";
italicson="${esc}3m";   italicsoff="${esc}23m";
ulon="${esc}4m";        uloff="${esc}24m";
invon="${esc}7m";       invoff="${esc}27m";


blocks() {
    cat <<blocks

${blackfg}â–ˆâ–ˆâ–ˆâ–ˆ${reset}${blackbg}â–ˆâ–ˆâ–ˆâ–ˆ${reset} ${redfg}â–ˆâ–ˆâ–ˆâ–ˆ${reset}${redbg}â–ˆâ–ˆâ–ˆâ–ˆ${reset} ${greenfg}â–ˆâ–ˆâ–ˆâ–ˆ${reset}${greenbg}â–ˆâ–ˆâ–ˆâ–ˆ${reset} ${yellowfg}â–ˆâ–ˆâ–ˆâ–ˆ${reset}${yellowbg}â–ˆâ–ˆâ–ˆâ–ˆ${reset} ${bluefg}â–ˆâ–ˆâ–ˆâ–ˆ${reset}${bluebg}â–ˆâ–ˆâ–ˆâ–ˆ${reset} ${purplefg}â–ˆâ–ˆâ–ˆâ–ˆ${reset}${purplebg}â–ˆâ–ˆâ–ˆâ–ˆ${reset} ${cyanfg}â–ˆâ–ˆâ–ˆâ–ˆ${reset}${cyanbg}â–ˆâ–ˆâ–ˆâ–ˆ${reset} ${whitefg}â–ˆâ–ˆâ–ˆâ–ˆ${reset}${whitebg}â–ˆâ–ˆâ–ˆâ–ˆ${reset}
${blackfg}â–ˆâ–ˆâ–ˆâ–ˆ${reset}${blackbg}â–ˆâ–ˆâ–ˆâ–ˆ${reset} ${redfg}â–ˆâ–ˆâ–ˆâ–ˆ${reset}${redbg}â–ˆâ–ˆâ–ˆâ–ˆ${reset} ${greenfg}â–ˆâ–ˆâ–ˆâ–ˆ${reset}${greenbg}â–ˆâ–ˆâ–ˆâ–ˆ${reset} ${yellowfg}â–ˆâ–ˆâ–ˆâ–ˆ${reset}${yellowbg}â–ˆâ–ˆâ–ˆâ–ˆ${reset} ${bluefg}â–ˆâ–ˆâ–ˆâ–ˆ${reset}${bluebg}â–ˆâ–ˆâ–ˆâ–ˆ${reset} ${purplefg}â–ˆâ–ˆâ–ˆâ–ˆ${reset}${purplebg}â–ˆâ–ˆâ–ˆâ–ˆ${reset} ${cyanfg}â–ˆâ–ˆâ–ˆâ–ˆ${reset}${cyanbg}â–ˆâ–ˆâ–ˆâ–ˆ${reset} ${whitefg}â–ˆâ–ˆâ–ˆâ–ˆ${reset}${whitebg}â–ˆâ–ˆâ–ˆâ–ˆ${reset}
${blackfg}â–ˆâ–ˆâ–ˆâ–ˆ${reset}${blackbg}â–ˆâ–ˆâ–ˆâ–ˆ${reset} ${redfg}â–ˆâ–ˆâ–ˆâ–ˆ${reset}${redbg}â–ˆâ–ˆâ–ˆâ–ˆ${reset} ${greenfg}â–ˆâ–ˆâ–ˆâ–ˆ${reset}${greenbg}â–ˆâ–ˆâ–ˆâ–ˆ${reset} ${yellowfg}â–ˆâ–ˆâ–ˆâ–ˆ${reset}${yellowbg}â–ˆâ–ˆâ–ˆâ–ˆ${reset} ${bluefg}â–ˆâ–ˆâ–ˆâ–ˆ${reset}${bluebg}â–ˆâ–ˆâ–ˆâ–ˆ${reset} ${purplefg}â–ˆâ–ˆâ–ˆâ–ˆ${reset}${purplebg}â–ˆâ–ˆâ–ˆâ–ˆ${reset} ${cyanfg}â–ˆâ–ˆâ–ˆâ–ˆ${reset}${cyanbg}â–ˆâ–ˆâ–ˆâ–ˆ${reset} ${whitefg}â–ˆâ–ˆâ–ˆâ–ˆ${reset}${whitebg}â–ˆâ–ˆâ–ˆâ–ˆ${reset}

blocks
}

lines() {
cat <<lines

${redfg}â•”â•¦â•¦â•¦â•¦â•¦â•¦â•¦â•¦â•¦â•¦â•¦â•¦â•¦â•¦â•¦â•¦â•—  ${greenfg}â•”â•¦â•¦â•¦â•¦â•¦â•¦â•¦â•¦â•¦â•¦â•¦â•¦â•¦â•¦â•¦â•¦â•—  ${yellowfg}â•”â•¦â•¦â•¦â•¦â•¦â•¦â•¦â•¦â•¦â•¦â•¦â•¦â•¦â•¦â•¦â•¦â•—
${boldon}${redfg}â•šâ•©â•©â•©â•©â•©â•©â•©â•©â•©â•©â•©â•©â•©â•©â•©â•©â•  ${greenfg}â•šâ•©â•©â•©â•©â•©â•©â•©â•©â•©â•©â•©â•©â•©â•©â•©â•©â•  ${yellowfg}â•šâ•©â•©â•©â•©â•©â•©â•©â•©â•©â•©â•©â•©â•©â•©â•©â•©â•${reset}
${bluefg}â•”â•¦â•¦â•¦â•¦â•¦â•¦â•¦â•¦â•¦â•¦â•¦â•¦â•¦â•¦â•¦â•¦â•—  ${purplefg}â•”â•¦â•¦â•¦â•¦â•¦â•¦â•¦â•¦â•¦â•¦â•¦â•¦â•¦â•¦â•¦â•¦â•—  ${cyanfg}â•”â•¦â•¦â•¦â•¦â•¦â•¦â•¦â•¦â•¦â•¦â•¦â•¦â•¦â•¦â•¦â•¦â•—
