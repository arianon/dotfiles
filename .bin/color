}

numbers() {
    cat <<numbers

${blackfg}11111111${reset} ${redfg}22222222${reset} ${greenfg}33333333${reset} ${yellowfg}44444444${reset} ${bluefg}55555555${reset} ${purplefg}66666666${reset} ${cyanfg}77777777${reset} ${whitefg}88888888${reset}
${blackbg}11111111${reset} ${redbg}22222222${reset} ${greenbg}33333333${reset} ${yellowbg}44444444${reset} ${bluebg}55555555${reset} ${purplebg}66666666${reset} ${cyanbg}77777777${reset} ${whitebg}88888888${reset}

numbers
}

satori() {
    cat <<satori

${blackfg}#353540${reset} ${redfg}#8C5760${reset} ${greenfg}#7B8C58${reset} ${yellowfg}#8C6E43${reset} ${bluefg}#58698C${reset} ${purplefg}#7B5E7D${reset} ${cyanfg}#66808C${reset} ${whitefg}#8C8B8B${reset}
${blackbg}#545466${reset} ${redbg}#B26F7A${reset} ${greenbg}#9DB270${reset} ${yellowbg}#B28C55${reset} ${bluebg}#7086B2${reset} ${purplebg}#9C77B2${reset} ${cyanbg}#8292B2${reset} ${whitebg}#B8B8C8${reset}

satori
}

case $1 in
    s) satori ;;
    b) blocks ;;
    n) numbers ;;
    l) lines  ;;
    *) satori ;;
esac
