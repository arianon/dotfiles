#!/usr/bin/env ruby
#coding: utf-8

require 'active_support'
require 'active_support/core_ext/numeric/conversions'

HORA = (ARGV.first || 16).to_i
DIA = 6 * HORA
SEMANA = 5 * DIA
MES = 4 * SEMANA
AÑO = 12 * MES

VEF = 1000
BTC = 650.0

def conv(n)
  [
    n.to_s(:currency),
    (n / BTC).to_s(:currency, unit: '฿'),
    (n * VEF).to_s(:currency, unit: 'VEF', format: '%n %u')
  ]
    .join(' | ')
end

puts <<EOF
Dado que el dolar valga #{VEF} BsF y el bitcoin #{BTC} BTC;
Ganancias previstas con #{conv(HORA)} la hora

Diario (6 horas): #{conv(DIA)}
Semanal (5 dias): #{conv(SEMANA)}
Mensual (4 sems): #{conv(MES)}
Anual (12 meses): #{conv(AÑO)}
EOF
